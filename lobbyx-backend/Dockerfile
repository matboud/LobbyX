FROM openjdk:22-ea-14-jdk-slim

ARG DB_HOST
ARG DB_NAME
ARG DB_PASSWORD
ARG DB_USERNAME
ARG JWT_ENCRYPTION_KEY

ENV DB_HOST=$DB_HOST
ENV DB_NAME=$DB_NAME
ENV DB_PASSWORD=$DB_PASSWORD
ENV DB_USERNAME=$DB_USERNAME
ENV JWT_ENCRYPTION_KEY=$JWT_ENCRYPTION_KEY

ADD target/lobbyx-backend-0.0.1-SNAPSHOT-exec.jar app.jar
ENTRYPOINT ["java", "-jar", "app.jar"]
